class Node:
    def __init__(self,data): 
        self._data = data
        self._next = None
    def addNode1(self):
        last = input("請輸入要儲存的一個數字(節點一)：")
        node1 = Node(last)
        last._next += node1
    def addNode2(self):
        last = input("請輸入要儲存的一個數字（節點二）：")
        node2 = Node(last)
        last._next = node2
    def addNode3(self):
        last = input("請輸入要儲存的一個數字（節點三）：")
        node3 = Node(last)
        last._next = node3


def dump(deck):
    deck.addNode1()
    print(f"到達節點一，資料為{last._next}")
    
            
dump(deck)
    
    
